        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div style="width:767px;height:367px;" class="blog-details-img">
                        <img style="width:100%;height:100%;" src="~/img/blog/@Model.Blog.Image" alt="blog-details">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.Blog.Title</h2>
                        <h6>By @Model.Blog.Author  /  @Model.Blog.CreatedDate.Day.@Model.Blog.CreatedDate.Month.@Model.Blog.CreatedDate.Year  /  <i class="fa fa-comments-o"></i> 4</h6>
                        <p>@Model.Blog.Description</p>
