@model CourseVM;

    <!-- Banner Area Start -->
    <div class="banner-area-wrapper">
        <div class="banner-area text-center">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="banner-content-wrapper">
                            <div class="banner-content">
                                <h2>courses details</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Area End -->
    <!-- Blog Start -->
    <div class="courses-details-area blog-area pt-150 pb-140">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="courses-details">
                        <div style="width: 770px; height: 410px"
                             class="courses-details-img">
                            <img style="width: 100%; height: 100%"
                                 src="~/img/course/@Model.Course.Image"
                                 alt="courses-details" />
                        </div>
                        <div class="course-details-content">
                        <h2>@Model.Course.Name</h2>
                            <p>
                                @Model.Course.Description
                            </p>
                            <div class="course-details-left">
                                <div class="single-course-left">
                                    <h3>about course</h3>
                                    <p>
                                    @Model.Course.AboutText
                                    </p>
                                </div>
                                <div class="single-course-left">
                                    <h3>how to apply</h3>
                                    <p>
                                    @Model.Course.Apply
                                    </p>
                                </div>
                                <div class="single-course-left">
                                    <h3>certification</h3>
                                    <p class="margin">
                                    @Model.Course.Certificiation
                                    </p>
                                    <p>
                                        I must explain to you how all this a mistaken idea of
                                        ncing great explorer of the rut the is lder of human
                                    </p>
                                </div>
                            </div>
                            <div class="course-details-right">
                                <h3>COURSE FEATURES</h3>
                                <ul>
                                    <li>starts <span>@Model.Course.StartDate.Date</span></li>
                                <li>duration <span>@(Model.Course.EndDate-Model.Course.StartDate) Month</span></li>
                                <li>class duration <span>@Model.Course.ClassDuration hours</span></li>
                                <li>skill level <span>@Model.Course.SkillLevel</span></li>
                                <li>language <span>@Model.Course.CourseLanguage.Name</span></li>
                                <li>students <span>@Model.Course.StudentCount</span></li>
                                <li>assesments <span>@Model.Course.courseAssests.Name</span></li>
                                </ul>
                            <h3 class="red">course fee $@Model.Course.CourseFee</h3>
                            </div>
                        </div>
                        <div class="reply-area">
                            <h3>LEAVE A REPLY</h3>
                            <p>
                                I must explain to you how all this a mistaken idea of ncing
                                great explorer of the rut<br />
                                the is lder of human happinescias unde omnis iste natus error
                                sit volptatem
                            </p>
                            <form id="contact-form"
                                  action="http://demo.devitems.com/eduhome/mail.php"
                                  method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p>Name</p>
                                        <input type="text" name="name" id="name" />
                                    </div>
                                    <div class="col-md-12">
                                        <p>Email</p>
                                        <input type="text" name="email" id="email" />
                                    </div>
                                    <div class="col-md-12">
                                        <p>Subject</p>
                                        <input type="text" name="subject" id="subject" />
                                        <p>Massage</p>
                                        <textarea name="message"
                                                  id="message"
                                                  cols="15"
                                                  rows="10"></textarea>
                                    </div>
                                </div>
                                <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                                <p class="form-messege"></p>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="blog-sidebar right">
                        <div class="single-blog-widget mb-50">
                            <h3>search</h3>
                            <div class="blog-search">
                                <form id="search" action="#">
                                    <input type="search"
                                           placeholder="Search..."
                                           name="search" />
                                    <button type="submit">
                                        <span><i class="fa fa-search"></i></span>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="single-blog-widget mb-50">
                            <h3>categories</h3>
                            <ul>
                            @foreach (var item in ViewBag.Categories)
                            {
                                <li><a asp-action="index" asp-controller="course" asp-route-id="@item.Id">@item.Name (@item.courseCategories.Count)</a></li>
                            }
                            </ul>
                        </div>
                        <div class="single-blog-widget mb-50">
                            <div class="single-blog-banner">
                                <a href="blog-details.html" id="blog">
                                    <img src="~/img/blog/blog-img.jpg" alt="blog" />
                                </a>
                                <h2>
                                    best<br />
                                    eductaion<br />
                                    theme
                                </h2>
                            </div>
                        </div>
                        <div class="single-blog-widget mb-50">
                            <h3>latest blogs</h3>

                            @foreach(var item in ViewBag.Blogs){
                            <div class="single-post mb-30">
                                <div class="single-post-img">
                                    <a style="width:95px;height:84px;" asp-action="detail" asp-controller="blog" asp-route-id="@item.Id">
                                        <img style="width: 100%;height: 100%;" src="~/img/blog/@item.Image" alt="post" />
                                        <div class="blog-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                </div>
                                <div class="single-post-content">
                                    <h4>
                                        <a asp-action="detail" asp-controller="blog" asp-route-id="@item.Id">@item.Title</a>
                                    </h4>
                                    <p>By @item.Author  /  @item.CreatedDate.Day.@item.CreatedDate.Month.@item.CreatedDate.Year</p>
                                </div>
                            </div>
                     }
                        </div>
                        <div class="single-blog-widget">
                            <h3>tags</h3>
                            <div class="single-tag">
                            @foreach (var item in ViewBag.Tags)
                            {
                                <a style="cursor:pointer;" class="mr-10 mb-10">@item.Name</a>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Blog End -->

