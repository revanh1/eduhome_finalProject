@model IEnumerable<Teacher>
@foreach (var item in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-12">
        <div class="single-teacher mb-45">
            <div class="single-teacher-img">
                <a asp-action="detail" asp-controller="teacher" asp-route-id="@item.Id"><img src="~/img/teacher/@item.Image" alt="teacher"></a>
            </div>
            <div class="single-teacher-content text-center">
                <h2><a asp-action="detail" asp-controller="teacher" asp-route-id="@item.Id">@item.Name</a></h2>
                <h4>@item.Position.Name</h4>
                <ul style="width:270px;height:40px;">
                    @foreach (var link in item.Socials.Take(4))
                    {
                        <li><a href="@link.Link"><i class="zmdi zmdi-@link.Name"></i></a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
}